<?xml version='1.0' encoding='utf-8'?>
<widget id="org.unico.wallet.app" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Unico Wallet</name>
    <description>User profile using Firebase, Vuexfire, and Google Cloud Storage</description>
    <author email="daniel.uzcategui@telosfoundation.io" href="http://telosfoundation.io">
        Daniel Uzcategui
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <icon src="www/img/sample-app-logo.png" />
        <allow-intent href="market:*" />
        <preference name="android-minSdkVersion" value="21" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <allow-navigation href="about:*" />
    <engine name="android" spec="7.1.4" />
</widget>
